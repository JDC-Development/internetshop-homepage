@import 'partial/styles'
descriptColor = #c0c0c0;
secondColor = #fdb447;
ledColor = #2e2e2e;

/*-----IMPORT FONTS-----*/
@font-face
    font-family "FontAwesome";
    src url(fonts/FontAwesome.otf);
    font-family "MyriadProSemibold";
    src url(fonts/MyriadPro-Semibold.otf);
    font-family "MyriadProRegular";
    src url(fonts/MyriadPro-Regular.otf);
    font-family "MyriadProBold";
    src url(fonts/MyriadPro-Bold.otf);
    
/*-----GLOBAL-----*/
body
    background #eaeaea;
    margin 0;
    padding 0;
    //overflow hidden;
i
    position relative;
section
    width 100%;
ul
    margin 0;
    padding 0;
#main-pages
    background white;
    width 85%;
    margin 15px auto;
    box-shadow -3px 5px 6px 0px rgba(0,0,0,0.15);
    display flex;
    align-items flex-start;
    overflow-x hidden;
    
#login-basket,#main-pages,footer
    position relative;
    top 115px;
/*-----HEAD-----*/
headder
    width 100%;
    flex-direction row;
    align-items center;
    justify-content space-around;
    background ledColor;
    .name
        font-family "MyriadProSemibold";
        font-size 30px;
        color descriptColor;
    .text-logo
        display flex;
        flex-direction column;
        align-items flex-start;
    .descript-name
        font-family "MyriadProRegular";
        font-size 12px;
        color descriptColor;
    .name-yellow
        color secondColor;
    .logo
        display flex;
        align-items center;
        margin 30px 0px;
    .number-head
        font-family "MyriadProRegular";
        font-size 12px;
        color descriptColor;
        
/*------TOP MENU-----*/
#menu-top
    position fixed;
    top 115px;
    z-index 999;
    margin-bottom 80px;
    background secondColor;
#top-menu
    background secondColor;
    padding 25px 0px;
    ul
        display flex;
        flex-wrap wrap;
        justify-content center;
        li
            list-style-type none;
            a
                color ledColor;
                text-decoration none;
                font-family "MyriadProRegular";
                font-size 12px;
                margin 0 15px;
                padding 10px;
                text-transform uppercase;
            a:hover
                background ledColor;
                color secondColor;
                border-radius 5px;
                text-shadow 0 0 10px #372912;
                
/*------LOGIN AND BASKET------*/
#login-basket
    display flex;
    align-items center;
    justify-content space-around;
    margin-top 20px;
    flex-wrap wrap;
    .login-form
        display flex;
        align-items flex-start;
        justify-content center;
        flex-direction column;
    .icon-and-form
        display flex;
        align-items center;
    .descript-login
        font-family "MyriadProRegular";
        color ledColor;
        font-size 12px;
    #login
        input
            box-shadow 1px solid ledColor;
            width 190px;
            height 15px;
            font-family "MyriadProRegular";
            font-size 12px;
            margin 0 5px;
        button
            background linear-gradient(to bottom, #373737, #141414);
            border 1px solid black;
            font-family "MyriadProRegular";
            font-size 12px;
            color secondColor;
            padding 5px 10px;
        button:hover
            cursor pointer;
.basket
    display flex;
    align-items center;
    .descript-basket
        display flex;
        flex-direction column;
        margin-left 10px;
        .head-basket
            font-family "MyriadProSemibold";
            font-size 12px;
            color secondColor;
        a
            font-family "MyriadProRegular";
            font-size 12px;
            color descriptColor;
            text-decoration none;
            margin-right  10px;

/*------ASIDE------*/
aside
    position relative;
    margin 15px 10px;
    padding-top 10px;
#serch
    display flex;
    flex-direction column;
    width 310px;
    border 1px solid #cccccc;
    border-radius 5px;
    padding 8px;
    form
        display flex;
        flex-direction column;
    .head-search
        background linear-gradient(to bottom, #43464a, black);
        font-family "MyriadProSemibold";
        font-size 12px;
        color secondColor;
        padding 10px;
    select
        margin 15px 0;
        height 30px;
    .descript-and-button
        span
            font-family "MyriadProRegular";
            font-size 12px;
            color #333333;
        button
            background linear-gradient(to bottom,#f8bb49,#f7941d);
            font-family "MyriadProBold";
            font-size 14px;
            border 1px solid #f7941d;
            padding 7px 17px;
            color white;
            margin-left 30px;
.head-product
    font-family "MyriadProSemobold";
    font-size 14px;
    color #333333;
    background #efefef;
    width 310px;
    padding 8px;
    border 1px solid #cccccc;
    border-radius 5px;
    margin 9px 0px;
#product
    ul
         list-style-type none;
         li
             width 310px;
             padding 8px;
             border-bottom  1px solid #cccccc;
             display none;
             a
                 font-family "MyriadProRegular";
                 font-size 12px;
                 text-decoration none;
                 color #333333;
.head-product:hover
    cursor pointer;

/*------SLIDER------*/
#slider
    background linear-gradient(to bottom, #2b2b2b, #000);
    border 5px solid black;
    margin 10px 0px 10px 5px;
    width 598px;
    overflow hidden;
    height 282px;
    ul
        width 2100px;
        position relative;
        transition all ease 1s;
        left 0;
        li
            list-style-type none;
            display inline-block;
        span
            font-family "MyriadProSemibold";
            font-size 30px;
            background  linear-gradient(to bottom, #ffae49, #ff930c);
            -webkit-background-clip text;
            padding-left 25px;
            -webkit-text-fill-color transparent; 
            text-shadow 2px 90deg 3px rgba(0, 0, 0, 0.25);
        .descript-slide
            font-family "MyriadProRegular";
            font-size 12px;
            color #ff9d00;
            padding 0px 25px;
        .icon-end-descript-slider
            display flex;
            justify-content space-around;
            align-items center;
        .price-and-add
            display flex;
            justify-content space-around;
            align-items center;
        .descript-and-add
            p
                background linear-gradient(to bottom, #f8bb49, #f7941d);
                font-family "MyriadProSemibold";
                font-size 14px;
                color white;
                padding-left 30px;
                padding-right 20px;
                padding-top 15px;
                padding-bottom 15px;
                border-radius 5px;
        .price-and-add
            .view-product
                font-family "MyriadProRegular";
                font-size 12px;
                color #e9e9e9;
                padding 10px;
                background linear-gradient(to bottom, #414141, #000);
                text-decoration none;
                border-radius 5px;
                margin 17px 7.5px;
            .to-basket
                font-family "MyriadProRegular";
                font-size 12px;
                color #e9e9e9;
                padding 10px;
                background linear-gradient(to bottom, #f8bb49, #f7941d);
                text-decoration none;
                border-radius 5px;
                margin 17px 7.5px;
#slider
    img
        width 200px;
        height 179px;
/*------CARDS------*/
.cards
    display flex;
    flex-direction column;
    justify-content flex-start;
    align-items flex-start;
    width 305px;
    border 1px solid #ccc;
    background #fafafa;
    border-bottom-left-radius 5px;
    border-bottom-right-radius 5px;
    margin 15px 5px;
    .name
        font-family "MyriadProSemibold";
        font-size 12px;
        color #fff;
        background linear-gradient(to bottom, #f8bb49, #f7941d);
        padding 10px 206.7px 10px 15px;
    .name-count
        display flex;
        justify-content space-between;
        align-items center;
        .name-2,.count
            font-family "MyriadProSemibold";
            font-size 12px;
            color #000;
            padding-top 10px;
        .count
            color #fff;
    p
        color #a16316;
        font-family "MyriadProRegular";
        font-size 12px;
    .descript-cards
        background linear-gradient(to bottom, #f8bb49, #f7941d);
        width 275px;
        padding 0px 15px;
    img
        margin 0 auto;
    .view-product
        font-family "MyriadProRegular";
        font-size 12px;
        color #e9e9e9;
        padding 10px;
        background linear-gradient(to bottom, #414141, #000);
        text-decoration none;
        border-radius 5px;
        margin 17px 7.5px;
    .to-basket
        font-family "MyriadProRegular";
        font-size 12px;
        color #e9e9e9;
        padding 10px;
        background linear-gradient(to bottom, #f8bb49, #f7941d);
        text-decoration none;
        border-radius 5px;
        margin 17px 7.5px;
    .link-add
        margin 25px 30px;
#cards-shop
    display flex;
    justify-content flex-start;
    align-items center;
    flex-wrap wrap;

/*------FOOTER------*/
.all-links
    display flex;
    justify-content space-around;
    margin 0 auto;
    ul
        li
            list-style-type none;
            a
                font-family "MyriadProRegular";
                font-size 12px;
                color #f7941d;
                text-decoration none;
                padding 15px;
    h2
        font-family "MyriadProSemibold";
        font-size 14px;
        color #000;
        
#menu-toogle
    display none;
#cards-shop
    margin 0px auto;
.menu-adaptiv
    display none;